@using Mvc5Memberships.Areas.Admin.Models
@using Mvc5Memberships.Extenstion
@model IEnumerable<Mvc5Memberships.Entities.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WaitDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemTypes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFree)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WaitDays)
        </td>
        <td>
            @item.ItemTypeId.ShowItemType()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFree)
        </td>
